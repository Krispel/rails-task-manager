<h1>My Task</h1>
<%@tasks.each do |task| %>
<%= link_to task_path(task) do  %>
<h4>title: <%=task.title%></h4>
<% end %>
<h4>details: <%=task.details%></h4>
<h4>status: <%=task.completed ? "Done": "Not Done"%></h4>
<%= link_to "Delete" , task_path(task) , method: :delete %>

<% end %>
<%= link_to "New Task" , new_task_path %>

